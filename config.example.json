{
    "name": "Crystal Interest",
    "version": "0.5",
    "path" : "/home/crystal-crawler/",
    "maxYields" : 2,

    "request" : {
        "redirectDeep" : 3,
        "timeoutInMS" : 10000,
        "codes" : {
            "abbruptly" : "990",
            "maxdeep" : "991",
            "timeout" : "992",
            "empty" : "993"
        }
    },

    "debug" : 1,
    "eachLinkDelay" : 500,
    "eachIterationDelay" : 10000,
    "codes" : {
        "badDomain" : "980"
    },

    "mongo" : {
        "host" : "localhost",
        "port" : 27017,
        "db" : "crawler-prototype",
        "password" : "",
        "username" : "",
        "reconnectTimeout" : 10000
    },

    "mysql" : {
        "host" : "localhost",
        "user" : "root",
        "password": "toor",
        "dbName" : "Crawler",
        "tableName" : "domain",
        "debug" : false,
        "options" : {
            "maxProcessLimit" : 5,
            "timeToReprocessInSec" : 86400,
            "timeOutForRetryInSec" : 60,
            "reconnectAfterInSec" : 5
        }
    },

    "analyzer" : {
        "path" : "analyzer/",
        "version" : "0.3",
        "fileName" : "analyzer",
        "maxInstances" : 100,
        "killSignal" : "SIGINT"
    },

    "logs" : {
        "path" : "logs/",
        "fileExt" : ".log",
        "tableName" : "log"
    }
}
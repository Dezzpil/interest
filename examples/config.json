{
    "name": "Crystal Interest Bot",
    "version": "3.0",
    "path" : "/home/crystal-interest/",

    "iteration" : {
        "yields" : 2,
        "recheckCount" : 101,
        "recheckDelay" : 1000,
        "restartDelay" : 1000,
        "count" : 10
    },

    "request" : {
        "redirectDeep" : 5,
        "timeout" : 10000,
        "userAgent" : null
    },

    "response" : {
        "timeout" : 10000
    },

    "encode" : {
        "detectionName" : "encoding/chardet",
        "recodeName" : "recode",
        "timeout": 500,
        "maxBufferInKb": 1024,
        "killSignal": "SIGTERM",
        "cwd": null,
        "env": null
    },

    "debugmode" : 0,

    "codes" : {
        "htmlParseError" : "970",
        "errorWhenChardet" : "975",
        "errorWhenEncode" : "976",
        "badDomain" : "980",
        "requestAbbruptly" : "990",
        "requestMaxdeep" : "991",
        "requestTtimeout" : "992",
        "requestEmpty" : "993"
    },

    "mongo" : {
        "host" : "localhost",
        "port" : 27017,
        "db" : "crawler",
        "password" : "",
        "username" : "",
        "reconnectTimeout" : 1000
    },

    "mysql" : {
        "host" : "localhost",
        "user" : "root",
        "password": "Motorola9",
        "dbName" : "Crawler",
        "tableName" : "domain",
        "debug" : false,
        "options" : {
            "timeToReprocessInSec" : 86400,
            "timeOutForRetryInSec" : 60,
            "reconnectAfterInSec" : 5,
            "onlyGroup" : 0
        }
    },

    "analyzer" : {
        "port" : 8124,
        "host" : "localhost",
        "maxConnections" : 10,
        "waitForAnswer" : 10000,
        "chunkLength" : 4096,
        "chunkGlue" : ".l."
    },

    "loggers" : {
        "process" : {
            "type" : "file",
            "options" : {
                "filename" : "./logs/process.log",
                "maxsize" : 10485760,
                "maxFiles" : 5,
                "level" : "info",
                "json" : false,
                "prettyPrint" : true
            }
        },
        "errors" : {
            "type" : "console",
            "options" : {
                "level" : "debug",
                "colorize" : true,
                "json" : false
            }
        },
        "memory" : {
            "type" : "mongodb",
            "options" : {
                "host" : "localhost",
                "port" : 27017,
                "db" : "crawler",
                "password" : "",
                "username" : "",
                "timeout" : 1000,
                "collection" : "memory",
                "level" : "debug",
                "silent" : false,
                "safe" : false
            }
        }
    },

    "daemon" : {
        "workers" : {
            "process" : 0,
            "helper" : 1
        }
    },

    "crawler" : {
        "ignore" : "|js|css|jpg|jpeg|png|gif|bmp|doc|docx|pdf|xls|xlsx|rar|zip|gz|exe|deb|tar|rpm|ppt",
        "perceiveNofollow" : true,
        "deep" : 0
    }
}

{
    "name": "Crystal Interest Bot",
    "version": "2.0",
    "path" : "/home/crystal-interest/",
    "maxYields" : 3,
    "readyCheckPeriodInSec" : 6,
    "readyCheckMaxTryCount" : 10,

    "request" : {
        "redirectDeep" : 3,
        "timeoutInMS" : 30000
    },

    "charsetProcessing" : {
        "detectionName" : "encoding/chardet",
        "recodeName" : "recode",
        "timeoutInSec": 5,
        "maxBufferInKb": 200,
        "killSignal": "SIGTERM",
        "cwd": null,
        "env": null
    },

    "debug" : 0,
    "eachLinkDelay" : 500,
    "eachIterationDelay" : 10000,
    "codes" : {
        "htmlParseError" : "970",
        "errorWhenChardet" : "975",
        "errorWhenEncode" : "976",
        "badDomain" : "980",
        "requestAbbruptly" : "990",
        "requestMaxdeep" : "991",
        "requestTtimeout" : "992",
        "requestEmpty" : "993"
    },

    "mongo" : {
        "host" : "localhost",
        "port" : 27017,
        "db" : "crawler",
        "password" : "",
        "username" : "",
        "reconnectTimeout" : 10000
    },

    "xmlpipe2" : {
        "documentsNumEachExec" : 1000
    },

    "mysql" : {
        "host" : "alpha.crystalteam.ru",
        "user" : "test",
        "password": "123456",
        "dbName" : "Crawler",
        "tableName" : "domain",
        "debug" : false,
        "options" : {
            "maxProcessLimit" : 10,
            "timeToReprocessInSec" : 86400,
            "timeOutForRetryInSec" : 60,
            "reconnectAfterInSec" : 5
        }
    },

    "analyzer" : {
        "path" : "analyzer/",
        "fileName" : "analyzer",
        "maxInstances" : 100,
        "killSignal" : "SIGKILL"
    },

    "loggers" : {
        "process" : {
            "type" : "file",
            "options" : {
                "filename" : "./logs/process.log",
                "maxsize" : 10485760,
                "maxFiles" : 5,
                "json" : false

            }
        },
        "errors" : {
            "type" : "file",
            "options" : {
                "filename" : "./logs/error.log",
                "maxsize" : 10485760,
                "maxFiles" : 5,
                "json" : false

            }
        }

    },

    "daemon" : {
        "workers" : {
            "process" : 0,
            "helper" : 1
        }
    }
}